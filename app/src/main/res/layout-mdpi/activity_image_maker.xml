<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="a15thaugust.blackhunter.com.shokdibos.ImageMakerActivity"
    android:background="@color/colorBackground"
    android:weightSum="3">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            />
    </ScrollView>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/browseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Browse Photo  "
            android:background="@color/colorButton"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginRight="15dp"/>

        <Button
            android:id="@+id/makeThisPhotoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Make this Photo  "
            android:background="@color/colorButton"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewPhotMaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_idPhotoMaker"
        />

</LinearLayout>